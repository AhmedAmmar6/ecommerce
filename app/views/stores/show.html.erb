<h1 class = "text-center mt-4" >Your Store</h1>
<p class = "text-center mt-4" >Store Name: <%= @store.name if @store %></p>
<p class = "text-center mt-4" >Store Type: <%= @store.category if @store %></p>
<div class="card-body text-center mt-4">
<%= link_to "Add Product", new_store_product_path(@store), class: "btn btn-warning" %>
</div><br/>

<h1 class = "text-center mt-4">Seller's Products</h1>
<div class="container">
<% @store.products.each do |product| %>
    <div class = "row justify-content-md-center">
        <div class="col-6 mt-5">
            <div class="card text-center">
            <div class="card-header font-italic">
                <p><%= %></p> 
            </div>
            <div class="card-body">
                <h5 class="card-title"><%= product.title %></h5>
                <p class="card-text"><%= truncate(product.description, length: 100) %></p>
                <%= link_to "View Product", store_product_path(product.store, product), class:"btn btn btn-warning"%>

            </div>
            <div class="card-footer text-muted">
                <small>Created <%= time_ago_in_words(product.created_at) %> ago, edited <%= time_ago_in_words(product.updated_at) %> ago</small>
            </div>
            </div>
        </div>
    </div>
<% end %>
</div><br/>


