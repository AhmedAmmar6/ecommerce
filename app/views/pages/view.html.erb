<h1 class = "text-center">My Products</h1>
<div class="container">
<% @purchases.each do |purchase| %>
    <div class = "row justify-content-md-center">
        <div class="col-7 mt-5">
            <div class="card text-center">
            <div class="card-header font-italic">

            </div>
            <div class="card-body">
                <h5 class="card-title"><%= purchase.product.title.titleize%></h5>
                <p class="card-text"><%= truncate(purchase.product.description, length: 100) %></p>
                <div class="card-text"><p>Purchased Items: <%= purchase.count %></p></div>
                <%= link_to "View Product", store_product_path(purchase.product.store, purchase.product), class:"btn btn btn-warning"%>

            </div>
            <div class="card-footer text-muted">
                <small>Created <%= time_ago_in_words(purchase.product.created_at) %> ago, edited <%= time_ago_in_words(purchase.product.updated_at) %> ago</small>
            </div>
            </div>
        </div>
    </div>
<% end %>
</div><br/>